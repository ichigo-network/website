{
  "name": "ichigo.network",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt",
    "generate": "nuxt generate",
    "lint": "pnpm run lint:js && pnpm run lint:style",
    "lint:fix": "pnpm run lint:js -- --fix && pnpm run lint:style -- --fix",
    "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
    "lint:style": "stylelint \"**/*.{css,html,vue}\" --ignore-path .gitignore",
    "locales:check": "vue-i18n-extract report --vueFiles './src/**/*.vue' --languageFiles './src/locales/lang/*.js'",
    "start": "nuxt start"
  },
  "workspaces": [
    "src/*"
  ],
  "dependencies": {
    "@nuxtjs/i18n": "^7.0.3",
    "@nuxtjs/sitemap": "^2.4.0",
    "core-js": "^3.21.1",
    "nuxt": "^2.15.8",
    "vue": "^2.6.14",
    "vue-server-renderer": "^2.6.14",
    "vue-template-compiler": "^2.6.14",
    "webpack": "^4.46.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.16.3",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@nuxtjs/eslint-config": "^8.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/stylelint-module": "^4.1.0",
    "@nuxtjs/svg": "^0.4.0",
    "@nuxtjs/tailwindcss": "^4.2.1",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-nuxt": "^1.0.1",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-nuxt": "^3.1.0",
    "eslint-plugin-tailwindcss": "^2.0.1",
    "eslint-plugin-vue": "^8.2.0",
    "husky": "^7.0.0",
    "postcss": "^8.4.4",
    "postcss-html": "^1.3.0",
    "stylelint": "^14.5.1",
    "stylelint-config-recommended-vue": "^1.1.0",
    "stylelint-config-standard": "^24.0.0",
    "vue-i18n-extract": "^2.0.4"
  }
}
